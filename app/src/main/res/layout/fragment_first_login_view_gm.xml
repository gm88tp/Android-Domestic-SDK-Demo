<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical"
        android:paddingLeft="34dp"
        android:paddingRight="34dp">

        <ImageView
            android:id="@+id/gm_long_logo"
            android:layout_width="135dp"
            android:layout_height="37dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_login_logo_new_gm" />


        <TextView
            android:id="@+id/tv_first_login_by_already_account_gm"
            style="@style/LongYellowButton_guaimao"
            android:layout_marginTop="31dp"
            android:text="已有账号登录" />

        <TextView
            android:id="@+id/tv_login_create_account_gm"
            style="@style/LongBorderButton_guaimao"
            android:layout_marginTop="16dp"
            android:text="创建账号" />


    </LinearLayout>


</RelativeLayout>