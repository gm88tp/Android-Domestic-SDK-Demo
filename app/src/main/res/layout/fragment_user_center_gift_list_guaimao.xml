<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#80000000">

    <LinearLayout
        android:id="@+id/ll_user_center_gift_list_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_user_center_white_solid_guaimao"
        android:orientation="vertical"
        android:paddingBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:background="#ff8a00">

            <RelativeLayout
                android:id="@+id/rl_user_center_gift_list_return"
                android:layout_width="55dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_user_center_gift_list_return"
                    android:layout_width="8dp"
                    android:layout_height="14.5dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_new_white_back" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="游戏礼包"
                android:textColor="#FFFFFF" />
            <RelativeLayout
                android:id="@+id/rl_user_center_my_gift"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <Button
                    android:id="@+id/bt_my_gift_gm"
                    android:textColor="#FF9600"
                    android:layout_width="77.5dp"
                    android:layout_height="32.5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="我的礼包"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_user_center_function_bar_white_guaimao" />
            </RelativeLayout>

        </RelativeLayout>

        <View style="@style/HorizontalLine_guaimao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/color_c12_gm"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lv_user_center_gift_list_guaimao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null" />
            <ImageView
                android:id="@+id/iv_user_center_gift_empty_pic_guaimao"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_new_no_activity_gm"
                android:visibility="gone"
                tools:visibility="visible" />
            <TextView
                android:id="@+id/iv_user_center_gift_empty_text_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_centerHorizontal="true"
                android:text="暂无内容"
                android:textSize="20dp"
                android:textColor="#AAAAAA"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>