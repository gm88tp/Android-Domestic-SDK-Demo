<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_new_gm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">


        <ImageView
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_logo_for_token_confirm" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/tv_login_by_token_change_account_gm"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:background="@drawable/bg_long_grey_border_button_guaimao"
                android:gravity="center"
                android:text="切换账号"
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_login_by_token_login_by_token_gm"
                style="@style/LongYellowButton_guaimao"
                android:layout_width="100dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:text="直接登录"
                android:textColor="#2f2e2e"
                android:textSize="14sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>