<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/gm_sdk_activity_width"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">


        <include layout="@layout/include_view_login_logo_gm" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:paddingLeft="26dp"
            android:paddingRight="26dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@drawable/bg_login_new_user_name"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_login_by_v_code_user_name_gm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/string_register_phone_num_gm"
                    android:inputType="phone"
                    android:lines="1"
                    android:paddingLeft="15dp"
                    android:textSize="@dimen/text_size_f13_guaimao" />

                <RelativeLayout
                    android:id="@+id/rl_login_by_v_code_phone_number_clear"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    tools:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_login_by_v_code_phone_number_clear"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_register_new_gm_phone_clear" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_login_new_user_name"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/et_login_by_v_code_code_gm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="@string/register_verify_code_tips_gm"
                        android:inputType="number"
                        android:lines="1"
                        android:paddingLeft="15dp"
                        android:textSize="@dimen/text_size_f13_guaimao" />
                </LinearLayout>


                <com.game.sdk.reconstract.widget.CountDownButton
                    android:id="@+id/cdb_login_by_v_code_send_button"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/register_get_verify_code_gm"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_f13_guaimao" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_login_by_v_code_confirm_button"
                style="@style/LongYellowButton_guaimao"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="登录游戏"
                android:textColor="@color/text_black33_gm"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>