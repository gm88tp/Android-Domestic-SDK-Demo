<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000">


    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_user_center_guaimao"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gm_sdk_general_title_bar_height">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="温馨提示"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />


            <RelativeLayout
                android:id="@+id/rl_id_card_info_tips_close_gm"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/iv_id_card_info_tips_close_gm"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_register_new_gm_close" />

            </RelativeLayout>

            <View
                style="@style/HorizontalLine_guaimao"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:text="尊敬的用户，您好："
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:lineSpacingExtra="2dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:text="根据《防止未成年人沉迷网络游戏的通知》，游戏用户需进行实名认证。请在下方填入对应信息进行认证。"
            android:textColor="#333333"
            android:textSize="13sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_id_card_info_tips_cancel_gm"
                    style="@style/ShortGreyBorderButton_guaimao"
                    android:text="取消" />

                <TextView
                    android:id="@+id/tv_id_card_info_tips_confirm_gm"
                    style="@style/MiddleYellowButton_guaimao"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:text="确定"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>