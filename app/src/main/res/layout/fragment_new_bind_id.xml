<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="322dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:background="@drawable/bg_user_center_function_bottom_bar_white_guaimao">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="实名制认证"
                android:textColor="#F59A23"
                android:textSize="20sp"
                android:textStyle="bold" />
            <RelativeLayout
                android:id="@+id/rl_close_gm"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="right">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_new_close" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="270dp"
            android:layout_height="90dp">
            <TextView
                android:id="@+id/tv_bind_hint_gm"
                android:textColor="#0A0A0A"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="       亲爱的玩家，按照国家相关法规要求，未实名登记的帐号体验时长不超过1小时，且不能充值，请尽快完成实名认证，以获得完整的游戏体验"/>

        </LinearLayout>
         <LinearLayout
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_width="264.5dp">


                <EditText
                    android:id="@+id/et_bind_id_name_gm"
                    android:layout_width="230dp"
                    android:paddingLeft="20dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入姓名"
                    android:singleLine="true"
                    android:textColor="@color/text_black32_gm"
                    android:textColorHint="#9a9a9a"
                    android:textSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="264.5dp"
                android:layout_height="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_bind_id_gm"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:background="@null"
                    android:hint="请输入身份证号"
                    android:singleLine="true"
                    android:textColor="@color/text_black32_gm"
                    android:textColorHint="#9a9a9a"
                    android:textSize="14dp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login_down_gm"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bind_id_btn_gm"
                android:background="@drawable/bg_user_center_function_bar_orange_coners_guaimao"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:text="绑定"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>