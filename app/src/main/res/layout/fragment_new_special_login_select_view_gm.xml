<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="292dp"
        android:layout_height="365dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_white_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">
        <RelativeLayout
            android:id="@+id/ll_back_gm"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="left">
            <ImageView
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_new_back" />
        </RelativeLayout>
            <RelativeLayout
            android:id="@+id/ll_close_gm"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15.5dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_new_close" />
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my_progress_loading_guaimao"
                android:layout_width="86.5dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_new_loading" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="自动登录中"
                android:layout_weight="1"

                android:textColor="#7F7F7F"
                android:textSize="17.5sp" />
            <TextView
                android:id="@+id/tv_special_login_by_already_count"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1588888888"
                android:textColor="#7F7F7F"
                android:layout_marginBottom="20dp"
                android:textSize="17.5sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_special_login_change_account"
                android:background="@drawable/bg_user_center_function_bar_orange_guaimao"
                android:gravity="center"
                android:layout_marginBottom="60dp"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:text="切换账号"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
