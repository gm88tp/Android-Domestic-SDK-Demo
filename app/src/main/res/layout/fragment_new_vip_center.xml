<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical"
    android:clickable="true">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="349dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62.5dp"
            android:background="@drawable/bg_user_center_function_bottom_bar_white_guaimao">
            <RelativeLayout
                android:id="@+id/rl_back_gm"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="left">
                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_new_back" />
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="VIP服务"
                android:textColor="#F59A23"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.game.sdk.reconstract.widget.circleimageview.CircleImageView
                android:id="@+id/iv_user_info_avatar_gm"
                android:layout_width="38.9dp"
                android:layout_height="38.9dp"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="22dp"
                android:src="@drawable/ic_new_user_info_avatar_default" />
            <TextView
                android:id="@+id/tv_vip_info_name_gm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:textColor="#7A746F"
                android:textSize="14dp"
                android:text="尊敬的VIP, 您好！" />

        </LinearLayout>
        <View style="@style/new_HorizontalLine_guaimao" />
        <LinearLayout
            android:background="@drawable/bg_login_down_gm"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_vip_growth_progress_vip_count_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#7A746F"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:text="VIP  当前成长值： " />

            <TextView
                android:id="@+id/tv_vip_growth_progress_growth_count_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#7A746F"
                android:textSize="12dp"
                android:text="0/0" />

            <com.game.sdk.reconstract.widget.PercentHorizontalView
                android:id="@+id/phv_vip_growth_progress_bar_guaimao"
                android:layout_width="247.5dp"
                android:layout_height="20.5dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/tv_vip_growth_progress_current_level_guaimao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="14dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="V0"
                    android:textSize="@dimen/text_size_f12_guaimao"
                    android:textColor="#7A746F" />


                <TextView
                    android:id="@+id/tv_vip_growth_progress_next_level_guaimao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="V1"
                    android:textColor="#7A746F"
                    android:textSize="@dimen/text_size_f12_guaimao" />



            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="#7A746F"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="成长值规则： 1元 = 10成长值" />
            <View style="@style/new_HorizontalLine_guaimao" />
            <Button
                android:id="@+id/bt_vip_personal_rights"
                android:background="@drawable/bg_user_center_function_bar_orange_coners_guaimao"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="25.5dp"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="VIP特权"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>