<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/gm_sdk_activity_width"
        android:layout_height="290dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gm_sdk_activity_title_height">


            <RelativeLayout
                android:id="@+id/rl_close_gm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/gm_sdk_activity_close_padding_right"
                android:paddingTop="@dimen/gm_sdk_activity_close_padding_top">

                <ImageView
                    android:id="@+id/iv_close_gm"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/sel_general_close_icon" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_register_new_title_gm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingTop="@dimen/gm_sdk_activity_title_padding_top"
                android:text="手机绑定"
                android:textColor="#000000"
                android:textSize="16sp" />

        </RelativeLayout>

        <View style="@style/HorizontalLine_guaimao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_login_new_user_name"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_user_icon_new_gm" />

            <EditText
                android:id="@+id/et_register_new_user_name_gm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/string_register_phone_num_gm"
                android:inputType="phone"
                android:lines="1"
                android:paddingLeft="15dp"
                android:textSize="@dimen/text_size_f13_guaimao" />

            <RelativeLayout
                android:id="@+id/rl_register_phone_number_clear"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                tools:visibility="visible">

                <ImageView
                    android:id="@+id/iv_register_phone_number_clear"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_register_new_gm_phone_clear" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login_new_user_name"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_password_new_gm" />

            <EditText
                android:id="@+id/et_register_password_new_gm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="@string/register_new_password_tips_gm"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="15dp"
                android:textSize="@dimen/text_size_f13_guaimao" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login_new_user_name"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_password_new_gm" />

            <EditText
                android:id="@+id/et_register_password_confirm_gm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/register_new_password_confirm_tips_gm"
                android:inputType="textPassword"
                android:lines="1"
                android:paddingLeft="15dp"
                android:textSize="@dimen/text_size_f13_guaimao" />

            <RelativeLayout
                android:id="@+id/rl_register_confirm_password_tips"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:visibility="invisible"
                tools:visibility="visible">


                <ImageView
                    android:id="@+id/iv_register_confirm_password_tips"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_register_new_gm_repeat_pwd_error" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="23dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_login_new_user_name"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="42dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_register_verify_code_new" />

            <EditText
                android:id="@+id/et_register_verify_code_gm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/register_verify_code_tips_gm"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="15dp"
                android:textSize="@dimen/text_size_f13_guaimao" />

            <com.game.sdk.reconstract.widget.CountDownButton
                android:id="@+id/cdb_register_verify_code_send_button"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/register_get_verify_code_gm"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_f13_guaimao" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_register_confirm_button"
            android:layout_width="273dp"
            android:layout_height="33dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_long_yellow_button"
            android:gravity="center"
            android:textColor="@color/text_black33_gm"
            android:textSize="14sp"
            tools:text="确定" />

    </LinearLayout>


</RelativeLayout>