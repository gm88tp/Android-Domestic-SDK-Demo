<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_user_center_account_coin_guaimao"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/sel_area_no_border_with_corner_2dp_guaimao"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_user_center_account_item_name_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/text_size_f12_guaimao"
                tools:text="猫币" />

            <com.game.sdk.reconstract.views.DotView
                android:id="@+id/dv_user_center_account_item_new_tips"
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:visibility="invisible" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_user_center_account_coin_forward_guaimao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_center_mine_account_forward"
            android:visibility="gone"
            tools:visibility="visible" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/tv_user_center_account_item_num_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#9a9a9a"
                android:textSize="@dimen/text_size_f11_guaimao"
                tools:text="200" />

            <LinearLayout
                android:id="@+id/ll_user_center_account_item_coupon_tips_container_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">


                <TextView
                    android:id="@+id/tv_user_center_account_item_valid_coupon_count_guaimao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/text_size_f14_guaimao"
                    tools:text="1张" />

                <TextView
                    android:id="@+id/tv_user_center_account_item_wait_to_get_coupon_count_guaimao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f82b2b"
                    android:textSize="@dimen/text_size_f10_guaimao"
                    tools:text="6张待领取" />


            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>

    <View style="@style/HorizontalLine_guaimao" />

</LinearLayout>