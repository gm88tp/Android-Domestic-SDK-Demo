<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="158dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_download_tips_background"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_downloading_tips_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:text="请不要关闭游戏，否则游戏无法完成更新"
            android:textColor="#ff9600"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_downloading_progress_guaimao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="50dp"
            android:text="0%"
            android:textColor="#ff9600"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <ProgressBar
                android:id="@+id/pb_downloading_progress_gm"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminateOnly="false"
                android:progressDrawable="@drawable/bg_customer_progress_bar_horizontal" />


            <ImageView
                android:id="@+id/iv_download_complete_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_download_complete_install_gm"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>