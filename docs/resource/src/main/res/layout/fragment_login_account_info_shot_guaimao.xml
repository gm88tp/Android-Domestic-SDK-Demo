<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_login_account_info_shot_whole"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="225dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_user_center_white_solid_guaimao"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/gm_long_logo"
                android:layout_width="172dp"
                android:layout_height="47dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="17dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_login_logo_new_gm" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="以下是您的怪猫游戏平台登录的账号和密码"
            android:textColor="@color/text_black33_gm"
            android:textSize="@dimen/text_size_f13_guaimao" />


        <LinearLayout
            android:layout_width="225dp"
            android:layout_height="92dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_account_info_shot_yellow_corner_radius_3dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_login_account_info_detail_account_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black33_gm"
                android:textSize="@dimen/text_size_f13_guaimao"
                tools:text="登录账号：15991880044" />

            <TextView
                android:id="@+id/tv_login_account_info_detail_password_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/text_black33_gm"
                android:textSize="@dimen/text_size_f13_guaimao"
                tools:text="登录密码：123456" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>