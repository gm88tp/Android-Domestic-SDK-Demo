<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_register_new_whole_guaimao"
        android:layout_width="305dp"
        android:layout_height="349dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_user_center_function_bottom_bar_white_guaimao">
        <RelativeLayout
            android:id="@+id/rl_back_gm"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">
            <ImageView
                android:id="@+id/iv_back_gm"
                android:layout_width="12dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_new_back" />
        </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="手机绑定"
                android:textColor="#F59A23"
                android:textSize="20sp"
                android:textStyle="bold" />
        <RelativeLayout
            android:id="@+id/rl_close_gm"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="right">
            <ImageView
                android:id="@+id/iv_close_gm"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_new_close" />
        </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="166dp">
            <LinearLayout
                android:id="@+id/fragment_login_entrance_loginname_gm"
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">
                <TextView
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:text="+86"
                    android:paddingLeft="5dp"
                    android:layout_width="40dp"
                    android:layout_height="25dp" />
                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7F7F7F" />
                <EditText
                    android:id="@+id/et_login_entrance_user_phone_gm"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_black32_gm"
                    android:textColorHint="#9a9a9a"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_v_code_gm"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:hint="请输入验证码"
                    android:textColor="@color/text_black32_gm"
                    android:textColorHint="#9a9a9a"
                    android:textSize="14dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <com.game.sdk.reconstract.widget.CountDownButton
                        android:id="@+id/v_code_send_button"
                        android:gravity="center|right"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="280dp"
                        android:layout_height="45dp"
                        android:text="获取验证码"
                        android:textColor="#F59A23"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_login_entrance_password_gm"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/guaimao_login_shape">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:src="@drawable/ic_new_lock" />

                <View
                    android:layout_width="1dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#7F7F7F" />
                <EditText
                    android:id="@+id/et_login_entrance_user_password_gm"
                    android:layout_width="149dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入密码"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_black32_gm"
                    android:textColorHint="#9a9a9a"
                    android:textSize="14dp" />


                <RelativeLayout
                    android:layout_width="79dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/icon_eye_show"
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:visibility="invisible"
                        android:src="@drawable/ic_new_eye" />
                    <ImageView
                        android:id="@+id/icon_eye_hide"
                        android:layout_width="24dp"
                        android:layout_height="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="1dp"
                        android:visibility="visible"
                        android:src="@drawable/ic_new_eysclose" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:background="@drawable/bg_login_down_gm">

            <TextView
                android:id="@+id/tv_find_back_password_btn_gm"
                android:background="@drawable/bg_user_center_function_bar_orange_login_guaimao"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_width="262.5dp"
                android:layout_height="45dp"
                android:text="绑定"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>