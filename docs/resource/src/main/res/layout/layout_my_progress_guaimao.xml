<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_loading_dialog_bg_gm"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/gm_logo"
                android:layout_width="30dp"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/ic_loading_guaimao_logo_grey_gm" />

            <ImageView
                android:id="@+id/iv_my_progress_loading_guaimao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_loading_guaimao_circle_orange_gm" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_my_progress_title_guaimao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="AlertDialog"
            android:textColor="#dddddd"
            android:textSize="13sp" />

    </LinearLayout>
</RelativeLayout>