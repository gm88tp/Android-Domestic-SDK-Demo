<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/float_window_bottom_height_guaimao"
    android:background="@drawable/bg_float_icon_close_area">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_float_window_close_bg"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_above="@+id/tv_float_window_close_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/ic_float_window_bottom_close_active_bg"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/iv_float_window_close"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_above="@+id/tv_float_window_close_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="13dp"
            android:background="@drawable/bg_float_hide_icon"/>

        <TextView
            android:id="@+id/tv_float_window_close_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:text="@string/float_window_close_hint_gm"
            android:textSize="@dimen/text_size_f10_guaimao"
            android:textColor="#ffffff"/>
    </RelativeLayout>

</FrameLayout>