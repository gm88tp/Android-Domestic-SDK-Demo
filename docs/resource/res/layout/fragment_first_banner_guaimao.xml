<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">


    <RelativeLayout
        android:id="@+id/rl_first_banner_whole_guaimao"
        android:layout_width="249dp"
        android:layout_height="433dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_first_banner_pic_guaimao"
            android:layout_width="249dp"
            android:layout_height="433dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            tools:src="@drawable/bg_first_banner_default" />


        <RelativeLayout
            android:id="@+id/rl_first_banner_close_guaimao"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/iv_first_banner_pic_guaimao"
            android:layout_alignRight="@+id/iv_first_banner_pic_guaimao"
            android:layout_alignTop="@+id/iv_first_banner_pic_guaimao"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_first_banner_close_guaimao" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>