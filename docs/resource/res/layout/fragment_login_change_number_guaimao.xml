<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_user_center_main_function_top_bar_white_guaimao">


            <RelativeLayout
                android:id="@+id/rl_login_entrance_back_gm"
                android:layout_width="50dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_login_entrance_back_gm"
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_return_back_for_login_guaimao" />
            </RelativeLayout>


            <ImageView
                android:layout_width="85dp"
                android:layout_height="24.5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/rl_login_entrance_back_gm"
                android:layout_toRightOf="@+id/rl_login_entrance_back_gm"
                android:scaleType="fitXY"
                android:src="@drawable/ic_login_entrance_small_guaimao_logo_orange"
                android:id="@+id/login_entrance_logo" />




            <RelativeLayout
                android:gravity="center"
                android:id="@+id/gm_ll_user_center_main_function_customer_service"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/sel_area_no_border_with_corner_2dp_guaimao"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp">

                <com.game.sdk.reconstract.views.DotView
                    android:id="@+id/dv_user_center_main_function_account_customer_tips"
                    android:layout_width="@dimen/gm_sdk_main_function_item_new_tips_width"
                    android:layout_height="@dimen/gm_sdk_main_function_item_new_tips_height"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    tools:visibility="invisible" />

                <ImageView
                    android:scaleType="centerInside"
                    android:id="@+id/iv_user_center_main_function_customer_icon"
                    android:layout_width="26dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_user_center_main_function_cd_guaimao"
                    android:layout_below="@+id/dv_user_center_main_function_account_customer_tips"
                    android:layout_toStartOf="@+id/dv_user_center_main_function_account_customer_tips" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_login_entrance_register_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:layout_marginRight="28dp"
                android:background="@drawable/sel_area_no_border_with_corner_2dp_guaimao"
                android:orientation="horizontal"
                android:paddingLeft="4dp"
                android:visibility="gone"
                android:paddingStart="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="注册"
                    android:textColor="@color/color_yellowff9600_gm"
                    android:textSize="@dimen/text_size_f12_guaimao" />


                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_login_entrance_yellow_arrow_guaimao" />
            </LinearLayout>

        </RelativeLayout>

        <View
            style="@style/HorizontalLine_guaimao"
            android:background="#E0E0E0" />

        <LinearLayout
            android:paddingTop="30dp"
            android:paddingLeft="28dp"
            android:id="@+id/fragment_login_entrance_loginname_gm"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:id="@+id/login_tv"
                android:textColor="#333333"
                android:textSize="12dp"
                android:text="@string/login_tv_edit_login_name_gm"
                android:layout_width="72dp"
                android:layout_height="25dp" />
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/login_tv"
                android:background="#e0e0e0"
                />

            <EditText
                android:enabled="false"
                android:paddingLeft="15dp"
                android:id="@+id/tv_login_number_list_gm"
                android:layout_width="154dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:textColor="@color/text_black32_gm"
                android:textColorHint="#9a9a9a"
                android:textSize="@dimen/text_size_f12_guaimao" />



            <RelativeLayout
                android:id="@+id/rl_login_entrance_username_pull_info"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/pull_up_or_down"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_login_entrance_username_pull_info_guaimao" />
            </RelativeLayout>
        </LinearLayout>



        <View
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            style="@style/HorizontalLine_guaimao"
            android:background="#E0E0E0" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_first_login_by_already_account_gm"
            style="@style/LongYellowButton_guaimao"
            android:layout_marginTop="40dp"
            android:text="登 录" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/tv_login_create_account_gm"
            style="@style/LongBorderColorbbbbbbButton2_guaimao"
            android:layout_marginTop="16dp"
            android:text="添加账号" />


    </LinearLayout>


</RelativeLayout>