<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="322dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_white_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </RelativeLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_my_progress_loading_guaimao"
                android:layout_width="86.5dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_new_loading" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:gravity="center"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="自动登录中"
                android:layout_weight="1"

                android:textColor="#7F7F7F"
                android:textSize="17.5sp" />
            <TextView
                android:id="@+id/tv_special_login_by_already_count"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1588888888"
                android:textColor="#7F7F7F"
                android:layout_marginBottom="20dp"
                android:textSize="17.5sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_special_login_change_account"
                android:background="@drawable/bg_user_center_function_bar_orange_login_guaimao"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:text="切换账号"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textSize="17sp" />


        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
