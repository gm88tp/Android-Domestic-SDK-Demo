<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_center_gift_list_item_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_c12_gm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:weightSum="7">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5">




            <TextView
                android:id="@+id/tv_adapter_item_gift_list_item_view_title_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:layout_marginLeft="25dp"

                android:textSize="18.5dp"
                tools:text="这是礼包的文案" />

            <ImageView
                android:id="@+id/iv_user_center_gifts_detail_new_hint"
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:src="@drawable/ic_detail_new_guaimao" />





            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">




            </RelativeLayout>



        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_adapter_item_gift_list_item_view_get_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:id="@+id/bt_get_code_guaimao"
                android:layout_width="77.5dp"
                android:layout_height="27.5dp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_user_center_function_bar_orange_guaimao"
                android:text="领取"
                android:textSize="15.5dp"
                android:visibility="visible" />
            <Button
                android:id="@+id/bt_got_code_guaimao"
                android:layout_width="77.5dp"
                android:layout_height="27.5dp"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_user_center_function_bar_gray_guaimao"
                android:text="已领取"
                android:textSize="15.5dp"
                android:visibility="invisible" />


        </RelativeLayout>

    </LinearLayout>

    <View
        style="@style/HorizontalLine_guaimao"
        android:layout_alignParentBottom="true" />
</RelativeLayout>