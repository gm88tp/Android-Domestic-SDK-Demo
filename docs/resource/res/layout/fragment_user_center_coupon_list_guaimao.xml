<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coupon_list_item_whole_guaimao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/gm_sdk_general_width"
        android:layout_height="@dimen/gm_sdk_general_height"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_user_center_guaimao"
        android:orientation="vertical"
        android:paddingBottom="10dp">


        <RelativeLayout
            android:id="@+id/rl_coupon_list_return_guaimao"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gm_sdk_general_title_bar_height"
            android:background="@drawable/bg_user_center_main_function_top_bar_white_guaimao"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/iv_coupon_list_return_guaimao"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_coupon_list_return_grey" />

            <TextView
                android:id="@+id/tv_coupon_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的优惠券"
                android:textColor="#000000"
                android:textSize="16sp" />


            <RelativeLayout
                android:id="@+id/rl_coupon_list_help_guaimao"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingRight="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_coupon_list_help" />

            </RelativeLayout>

        </RelativeLayout>


        <View style="@style/HorizontalLine_guaimao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#efeff0">

            <ListView
                android:id="@+id/lv_coupon_list_guaimao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="8dp"
                android:paddingRight="8dp" />

            <ImageView
                android:id="@+id/id_coupon_list_empty_view_guaimao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_c12_gm"
                android:src="@drawable/ic_no_activity_empty_bg_guaimao"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>