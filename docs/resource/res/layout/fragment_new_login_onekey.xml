<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="305dp"
        android:layout_height="322dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/bg_new_login_gm">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="134****4321"
                android:textColor="#333"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:background="#FFFFFF"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                >
                <include
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="vertical"
                    layout="@layout/gm_new_view_login_protocol"
                    android:layout_height="30dp"
                    android:layout_width="wrap_content" />


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_and_register_btn_gm"
                android:background="@drawable/bg_user_center_function_bar_orange_coners_guaimao"
                android:gravity="center"
                android:layout_marginTop="0dp"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:text="本机号码一键登录"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:id="@+id/ll_quick_login"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/bg_login_down_gm">
                <ImageView
                    android:layout_width="17.5dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_guaimao_new_fastlogin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="使用微信登录"
                    android:textColor="#000000"
                    android:textSize="15sp" />

            </LinearLayout>
            <LinearLayout

                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1.5"
                android:orientation="horizontal"
                android:background="#FFFFFF">


            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ll_phone_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="#FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他手机号登录"
                    android:textColor="#000000"
                    android:textSize="15sp" />dp

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_login_down_gm">
            <TextView
                android:id="@+id/tv_login_version_code"
                android:gravity="right|bottom"
                android:layout_marginRight="10dp"
                android:layout_alignParentBottom="true"
                android:textColor="#000000"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textSize="10sp"
                tools:text="v3.7.2" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>