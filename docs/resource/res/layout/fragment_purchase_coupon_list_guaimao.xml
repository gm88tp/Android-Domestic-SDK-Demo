<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#90000000"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="351dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_user_center_guaimao"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/gm_sdk_general_title_bar_height"
            android:background="@drawable/bg_user_center_main_function_top_bar_white_guaimao"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <RelativeLayout
                android:id="@+id/rl_coupon_select_list_return_guaimao"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="left">

                <ImageView
                    android:id="@+id/iv_coupon_select_list_return_guaimao"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_coupon_list_return_grey" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_coupon_select_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="优惠券"
                android:textColor="#000000"
                android:textSize="16sp" />


            <RelativeLayout
                android:id="@+id/rl_coupon_select_list_help_guaimao"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:visibility="gone">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_coupon_list_help" />

            </RelativeLayout>

        </RelativeLayout>


        <View style="@style/HorizontalLine_guaimao" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#efeff0"
            android:padding="2dp">


            <ListView
                android:id="@+id/lv_coupon_select_list_guaimao"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp" />

        </LinearLayout>

        <View style="@style/HorizontalLine_guaimao" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/bg_user_center_main_function_bottom_bar_white">


            <TextView
                android:id="@+id/tv_coupon_select_list_confirm_guaimao"
                style="@style/LongYellowButton_guaimao"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="确定" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>