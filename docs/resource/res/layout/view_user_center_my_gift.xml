<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_center_gift_list_item_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_c12_gm">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal">


        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tv_adapter_item_gift_list_item_view_title_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:layout_weight="1"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="16dp"
                android:textStyle="bold"
                tools:text="这是礼包的文案" />
            <TextView
                android:id="@+id/tv_adapter_item_gift_list_item_view_discount_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#FF9600"
                android:layout_marginLeft="25dp"
                android:textSize="17dp"
                android:textIsSelectable="true"
                tools:text="这是礼包码" />

            <TextView
                android:id="@+id/tv_adapter_item_gift_list_item_view_time_guaimao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:layout_weight="1"
                android:maxLines="1"
                android:textColor="#9A9A9A"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="5dp"
                android:textSize="14dp"
                tools:text="这是到期时间" />




        </LinearLayout>




    </LinearLayout>

    <View
        style="@style/HorizontalLine_guaimao"
        android:layout_alignParentBottom="true" />
</RelativeLayout>