<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_user_center_gift_list_item_whole"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_c12_gm"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_user_center_gift_list_item_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                tools:src="@drawable/ic_user_center_gift_list_item_icon_default" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_user_center_gift_list_item_icon"
                android:layout_alignTop="@+id/iv_user_center_gift_list_item_icon"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_user_center_gift_list_item_icon"
                android:layout_toRightOf="@+id/iv_user_center_gift_list_item_icon">


                <TextView
                    android:id="@+id/tv_user_center_gift_list_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:paddingTop="4dp"
                    android:textColor="@color/text_black32_gm"
                    android:textSize="@dimen/text_size_f12_guaimao"
                    tools:text="双11买点好吃的，来怪猫平台" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_user_center_gift_list_item_name"
                    android:orientation="horizontal"
                    android:paddingTop="6dp">

                    <TextView
                        android:id="@+id/tv_user_center_gift_list_item_left_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9a9a9a"
                        android:textSize="@dimen/text_size_f10_guaimao"
                        tools:text="剩余6%" />

                    <TextView
                        android:id="@+id/tv_user_center_gift_list_item_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:lines="1"
                        android:textColor="#9a9a9a"
                        android:textSize="@dimen/text_size_f10_guaimao"
                        tools:text="一天后结束" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_tv_user_center_gift_list_item_get_code"
                    style="@style/ShortYellowButton_guaimao"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="领取" />

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="4">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_adapter_item_gift_list_item_view_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:maxLines="1"
                        android:textColor="@color/text_black00_gm"
                        tools:text="这是礼包的title" />


                    <TextView
                        android:id="@+id/tv_adapter_item_gift_list_item_view_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:text="vip专享" />
                </LinearLayout>


                <com.game.sdk.reconstract.widget.PercentHorizontalView
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/tv_adapter_item_gift_list_item_view_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:textColor="#9a9a9a"
                    android:textSize="@dimen/text_size_f11_guaimao"
                    tools:text="这是礼包描述" />


                <TextView
                    android:id="@+id/tv_adapter_item_gift_list_item_view_validate_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    tools:text="兑换期限至：2017年8月17日" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">


                <TextView
                    style="@style/ShortYellowButton_width_10_corner_border_guaimao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    tools:text="领取" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_user_center_gift_list_item_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="13dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/iv_user_center_gift_list_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_main_yellow_gm"
                android:textSize="@dimen/text_size_f11_guaimao" />

            <TextView
                android:id="@+id/iv_user_center_gift_list_item_get_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/color_main_yellow_gm"
                android:textSize="@dimen/text_size_f11_guaimao" />

        </LinearLayout>

        <View style="@style/HorizontalLine_guaimao" />

    </LinearLayout>

</LinearLayout>