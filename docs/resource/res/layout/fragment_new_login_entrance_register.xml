<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="360dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_login_new_gm"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            >
            <TextView
                android:id="@+id/fragment_login_entrance_loginTitle_gm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="登录游戏"
                android:textColor="@color/gm_text_color_black2"
                android:textSize="18sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/fragment_login_entrance_iv_kf"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_login_kf" />

        </RelativeLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/fragment_login_entrance_loginname_gm"
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent">



                <EditText
                    android:id="@+id/et_login_entrance_user_name_gm"
                    android:layout_width="260dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="请输入账号/手机号"
                    android:singleLine="true"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gm_text_color_black"
                    android:textColorHint="@color/gm_text_color_gray"
                    android:textSize="14dp" />
                <RelativeLayout
                    android:id="@+id/rl_login_entrance_username_pull_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/pull_up_or_down"
                        android:layout_width="16dp"
                        android:layout_height="8dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_login_entrance_username_pull_info_guaimao" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_login_entrance_password_gm"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:background="@drawable/guaimao_login_shape"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_login_entrance_user_password_gm"
                    android:layout_width="230dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="请输入密码"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gm_text_color_black"
                    android:textColorHint="@color/gm_text_color_gray"
                    android:textSize="14dp"
                    android:imeOptions="actionDone"
                    />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                </RelativeLayout>

            </LinearLayout>
<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="29dp"-->
<!--                android:layout_marginRight="20dp"-->
<!--                android:layout_marginLeft="20dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:layout_marginBottom="10dp"-->
<!--                android:orientation="horizontal">-->
<!--                <include-->
<!--                    android:layout_weight="1.5"-->
<!--                    android:gravity="center"-->
<!--                    android:orientation="vertical"-->
<!--                    layout="@layout/gm_new_view_login_protocol"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_width="wrap_content" />-->


<!--            </LinearLayout>-->

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:layout_marginTop="20dp"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_login_and_register_btn_gm"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/bg_user_center_function_bar_orange_coners_guaimao"
                android:gravity="center"
                android:text="进入游戏"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:gravity="left"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"

            >
            <LinearLayout
                android:id="@+id/ll_quick_login"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_btn_login_red"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                >
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_guaimao_new_fastlogin" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="快捷登录"
                    android:layout_weight="1"
                    android:textColor="@color/gm_text_color_white"
                    android:textSize="12sp" />

            </LinearLayout>




            <LinearLayout
                android:id="@+id/ll_wechat_login"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_btn_login_green"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
               >
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/icon_guaimao_new_wechat" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="微信登录"
                    android:layout_weight="1"
                    android:textColor="@color/gm_text_color_white"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_phone_login"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/bg_btn_login_blue"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                >

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1"
                    android:src="@drawable/icon_guaimao_new_accountlogin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="手机登录"
                    android:layout_weight="1"
                    android:textColor="@color/gm_text_color_white"
                    android:textSize="12sp" />

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:gravity="bottom"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:layout_marginBottom="5dp"
            >
            <include
                android:gravity="center"
                android:orientation="vertical"
                layout="@layout/gm_new_view_login_protocol"
                android:layout_height="30dp"
                android:layout_width="wrap_content" />
            <TextView
                android:id="@+id/tv_login_version_code"
                android:gravity="right|center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="#989898"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:textSize="10sp"
                android:paddingRight="5dp"
                tools:text="v3.7.2" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>