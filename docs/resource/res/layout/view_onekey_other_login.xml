<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_new_gm"
    >

    <ImageView
        android:id="@+id/view_onekey_iv_kf"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_login_kf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/view_onekey_ll_protocol"
        android:paddingBottom="40dp"

        >
    <LinearLayout
        android:id="@+id/view_onekey_ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_pay_channel_wechat"
            />

            <TextView

                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/gm_text_color_gray_deep"
                android:text="使用微信登录"
                android:layout_marginLeft="5dp"
                />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >
    <TextView
        android:id="@+id/view_onekey_tv_other"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/gm_text_color_gray"
        android:text="其他手机号登录"

        />
    </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_onekey_ll_protocol"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <CheckBox
            android:id="@+id/view_onekey_cb_agree"
            android:button="@drawable/bg_onekey_protocol_checkbox_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.9"
            android:scaleY="0.9"
            android:padding="3dp"
            android:layout_marginRight="3dp"
            />
        <TextView
            android:id="@+id/view_onekey_tv_hint_protocol"
            android:textSize="9sp"
            android:text="我已阅读并同意"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gm_text_color_black"
            />

        <TextView
            android:textSize="9sp"
            android:id="@+id/view_onekey_tv_protocol"
            android:text="用户服务协议和隐私条款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gm_text_color_orange"
            />

        <TextView
            android:id="@+id/view_onekey_tv_other_protocol"
            android:layout_marginLeft="5dp"
            android:textSize="9sp"
            android:text="中国移动服务协议"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gm_text_color_orange"
            />

    </LinearLayout>

</RelativeLayout>
