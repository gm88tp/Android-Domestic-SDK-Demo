<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/ysf_bubble_max_width"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ysf_tv_bot_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/ysf_black_222222"
        android:textSize="@dimen/ysf_text_size_16" />

    <include layout="@layout/ysf_include_divider" />

    <com.qiyukf.unicorn.widget.ScrollListView
        android:id="@+id/ysf_lv_bot_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@android:color/transparent" />

    <include layout="@layout/ysf_message_item_bot_footer" />
</LinearLayout>